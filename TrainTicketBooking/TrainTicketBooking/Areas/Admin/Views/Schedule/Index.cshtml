@model IEnumerable<TrainTicketBooking.Data.ScheduleModel>

@{
    ViewBag.Title = "Index";
}

<div class="box">
    <div class="box-header">
        <h2 class="box-title"> Index</h2>
    </div>
    <!-- /.box-header -->
    <div class="box-body">

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table table-bordered table-striped" id="dtable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Stations.StationName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Trains.TrainName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ArrivalTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DepartureTime)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Stations.StationName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Trains.TrainName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArrivalTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DepartureTime)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section scripts{
    <script>
        $(function () {
            $("#dtable").DataTable();

        });
    </script>

}
